<?xml version="1.0" encoding="utf-8"?>
<custom1:GradientContentPage xmlns:custom1="clr-namespace:HTB4.Views.CustomControls"
                             xmlns="http://xamarin.com/schemas/2014/forms"
                             xmlns:custom="HTB4.Views.CustomControls"
                             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                             x:Class="HTB4.Views.MenuPage"
                             Title="Menu">
    <StackLayout VerticalOptions="FillAndExpand">
        <ListView x:Name="ListViewMenu"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Label Text="{Binding Title}"
                                   FontSize="20" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</custom1:GradientContentPage>