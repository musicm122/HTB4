<custom:GradientContentPage
    x:Class="HTB4.Views.CaseDrainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:HTB4.Views.CustomControls"
    xmlns:expandable="clr-namespace:Expandable;assembly=ExpandableView"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:vm="clr-namespace:HTB4.ViewModels"
    Title="Case Drain Calculator"
    ios:Page.UseSafeArea="true"
    BackgroundColor="Snow"
    EndColor="Black"
    StartColor="Black">

    <ContentPage.BindingContext>
        <vm:CaseDrainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid x:Name="MainGrid">
            <ScrollView VerticalOptions="FillAndExpand">
                <StackLayout
                    Padding="24"
                    Spacing="0"
                    VerticalOptions="FillAndExpand">
                    <StackLayout VerticalOptions="CenterAndExpand">
                        <Label
                            x:Name="TitleLabel"
                            FontFamily="{StaticResource font_medium}"
                            FontSize="16"
                            Text="Case Drain Calculator"
                            TextColor="{StaticResource dark_yellow}" />
                        <Label
                            x:Name="IntroLabel"
                            Margin="0,24,0,16"
                            FontFamily="{StaticResource font_book}"
                            FontSize="15"
                            Text="This tool lets you quickly calculate the optimal amount of units to buy based on your risk percentage and position size."
                            TextColor="#ffffff" />
                        <StackLayout Spacing="16" VerticalOptions="CenterAndExpand">
                            <Grid ColumnSpacing="16">
                                <StackLayout Grid.Column="0" Spacing="8">
                                    <Label
                                        FontFamily="{StaticResource font_medium}"
                                        FontSize="12"
                                        Text="RPM " />
                                    <Entry Keyboard="Numeric" Text="{Binding Rpm}" />
                                </StackLayout>
                                <StackLayout Grid.Column="1" Spacing="8">
                                    <Label
                                        FontFamily="{StaticResource font_medium}"
                                        FontSize="12"
                                        Text="CC/rev" />
                                    <Entry Keyboard="Numeric" Text="{Binding CCRev}" />
                                </StackLayout>
                                <StackLayout Grid.Column="2" Spacing="8">
                                    <Label
                                        FontFamily="{StaticResource font_medium}"
                                        FontSize="12"
                                        Text="Efficiency" />
                                    <Entry Keyboard="Numeric" Text="{Binding Efficiency}" />

                                </StackLayout>
                                <StackLayout
                                    Grid.Row="2"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <Button
                                        x:Name="Calculate"
                                        Margin="16"
                                        Command="{Binding OpenResultCommand}"
                                        Text="CALCULATE"
                                        VerticalOptions="StartAndExpand" />
                                    <Button
                                        x:Name="Clear"
                                        Margin="16"
                                        Command="{Binding OpenResultCommand}"
                                        Text="CLEAR"
                                        VerticalOptions="EndAndExpand" />

                                </StackLayout>


                            </Grid>
                        </StackLayout>

                    </StackLayout>

                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</custom:GradientContentPage>