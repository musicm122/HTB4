<?xml version="1.0" encoding="utf-8" ?>
<cus:CalcPage x:Class="HTB4.Views.Motor.MotorGpm"
              xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:cus="clr-namespace:HTB4.Views.CustomControls"
              xmlns:d="http://xamarin.com/schemas/2014/forms/design"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:vm="clr-namespace:CalculationLogic.ViewModels;assembly=CalculationLogic"
              x:Name="this"
              mc:Ignorable="d">

    <ContentPage.BindingContext>
        <vm:MotorViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <ScrollView>
            <StackLayout Margin="10,10"
                         BackgroundColor="{StaticResource LightBackgroundColor}">

                <cus:Header Text="Motor Gpm" />

                <StackLayout Margin="10,0,0,20">
                    <cus:NumberEntry Label="Diameter"
                                     Number="{Binding GpmDiameter}"
                                     Placeholder="Diameter" />
                    <cus:NumberEntry Label="Rpm"
                                     Number="{Binding GpmRpm}"
                                     Placeholder="Revolutions per minute" />
                </StackLayout>
                <Label Margin="0,0,0,5"
                       FontSize="28"
                       HorizontalOptions="Center"
                       Text="Output:"
                       TextColor="{StaticResource OutputTextColor}"
                       TextDecorations="Underline" />
                <StackLayout Margin="0,0,0,10">
                    <cus:OutputItemView Description="Gpm"
                                        Label="Gpm"
                                        Text="{Binding Gpm}" />
                </StackLayout>
                <cus:CalculationControl x:Name="displacementCalc"
                                        CalculateCommand="{Binding CalcGpmCommand}"
                                        ClearCommand="{Binding ClearGpmCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</cus:CalcPage>