<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="this"
             x:Class="HTB4.Views.CustomControls.Header">
  <ContentView.Content>
        <StackLayout BackgroundColor="{StaticResource Secondary}"
                     Orientation="Horizontal">
            <Label Margin="20,20"
                   FontSize="24"
                   TextColor="{StaticResource HeaderTextColor}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontAttributes="Bold"
                              FontFamily="{StaticResource MaterialFontFamily}"
                              FontSize="24"
                              Text="{Binding Source={x:Reference this}, Path=Icon}"
                              TextColor="{StaticResource HeaderTextColor}" />

                        <Span Text="{Binding Source={x:Reference this}, Path=Text}"
                              TextColor="{StaticResource HeaderTextColor}" />

                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>  </ContentView.Content>
</ContentView>