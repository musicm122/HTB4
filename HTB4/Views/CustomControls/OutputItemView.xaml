<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HTB4.Views.CustomControls.OutputItemView"
             x:Name="this">
    <StackLayout Margin="20,0"
                 Orientation="Vertical">
        <Label FontSize="Large"
               Text="{Binding Source={x:Reference this},Path=Label}"
               LineBreakMode="WordWrap"
               TextColor="{Binding Source={x:Reference this},Path=TextColor}" />

        <Label FontSize="Default"
               Text="{Binding Source={x:Reference this},Path=Description}"
               LineBreakMode="WordWrap"
               TextColor="{Binding Source={x:Reference this},Path=TextColor}" />

        <Label FontSize="Medium"
               Text="{Binding Source={x:Reference this},Path=Text}"
               LineBreakMode="WordWrap"
               TextColor="{Binding Source={x:Reference this},Path=TextColor}" />
    </StackLayout>
</ContentView>